<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body p-3">
                <h4 class="h4-responsive font-weight-bold text-dark mb-3">Images</h4>
                {% if advert.pictures|length > 0 %}
                    <div class="row">
                        {% for image in advert.pictures %}
                            <div class="col-6 col-md-4 col-lg-3 mb-3">
                                <a href="{{ asset(image.webPath) }}" target="_blank">
                                    <img src="{{ asset(image.webPath) }}" alt="{{ image.name }}" class="img-fluid" style="width: 100%;height: 170px;border-radius: 0.3rem" />
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
