<div id="advert-image" class="form-row mb-4"
     data-add-url="{{ path('app_image_upload_add') }}"
     data-delete-url="{{ path('app_image_upload_delete') }}">
    <div class="col-12">
        <div class="font-weight-bold small-8 mb-3">Ajoutez des photos pour rendre votre annonce encore plus visible.</div>
    </div>
    <div class="col-12">
        <div id="img-upload-drop" class="row img-upload-drop">
            <div class="col-12">
                <div class="content text-center">
                    <label id="img-upload-drop-label" class="dm-uploader d-block">
                        <button type="button" id="btn-photos" class="btn btn-primary btn-md z-depth-0 mt-2 px-2 px-md-4 btn-photos">
                            <i class="fas fa-camera mr-md-2 mr-1"></i> Télécharger des photos
                        </button>
                        <h5 class="h5-responsive mt-3 text-dark">ou Glisser directement vos photos ici</h5>
                        <input type="file" accept="image/*" title="Cliquer pour ajouter des images" multiple class="d-none input-photo">
