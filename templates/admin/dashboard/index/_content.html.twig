                    <a href="{{ path('app_admin_advert_index') }}" type="button" class="btn-floating btn-lg blue ml-2"><i class="fas fa-clipboard" aria-hidden="true"></i></a>
                </div>
                <div class="col-md-8 col-7 text-right mb-2">
                    <h5 class="ml-4 mt-4 mb-2 font-weight-bold text-dark pr-3">{{ advert }}</h5>
