{% import 'ui/macro/buttons.html.twig' as buttons %}

{% form_theme form 'ui/form/theme.html.twig' %}

<section class="section card mb-5">
    <div class="card-body p-3">
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'admin-form'}}) }}
        <P class="text-danger my-0">{{ form_errors(form) }}</P>

        {{ include('admin/carousel/form.html.twig') }}

        {{ form_widget(form._token) }}

        <div class="d-flex justify-content-end mt-4">
            {% set path = path('app_admin_carousel_index') %}

            <div class="text-center mr-3">{{ buttons.default(path, 'Retour à la liste', 'entity-list-btn', 'fas fa-angle-left', 'btn-outline-primary') }}</div>
            <div class="text-center">{{ buttons.validate('Créer', 'fas fa-save', '') }}</div>
        </div>
        {{ form_end(form, {'render_rest': false}) }}
    </div>
</section>
