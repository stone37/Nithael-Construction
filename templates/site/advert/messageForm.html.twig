<div class="form-row">
    <div class="col-12 col-md-6">
        {{ form_row(form.lastname) }}
    </div>
    <div class="col-12 col-md-6">
        {{ form_row(form.firstname) }}
    </div>
    <div class="col-12">
        {{ form_row(form.email) }}
    </div>
    <div class="col-12">
        {{ form_row(form.phone) }}
    </div>
    <div class="col-12">
        {{ form_widget(form.content) }}
    </div>
    <div class="col-12">
        {{ form_row(form.recaptchaToken) }}
    </div>
</div>

