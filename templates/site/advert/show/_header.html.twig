<section class="container advert-view-header mt-lg-3 mb-2">
    <div class="row">
        <div class="col-12 col-lg-9">
            <h1 class="h3-responsive font-weight-bold text-dark title mb-0">{{ advert.title }}</h1>
            <div class="price">
                {% if advert.price %}
                    <div class="price">{{ advert.price|format_currency('XOF') }}</div>
                {% else %}
                    <div class="price">Prix sur demande</div>
                {% endif %}
            </div>
        </div>
        <div class="col-12 col-lg-3 text-right">
            <div class="location">
                <i class="fas fa-map-marker-alt"></i>
                {{ advert.city }}
                {% if advert.district %}({{ advert.district }}){% endif %}
            </div>
            <div class="validate-at">Publi√©e le {{ advert.createdAt|format_datetime(pattern="dd MMM yyyy") }}</div>
        </div>
    </div>
</section>