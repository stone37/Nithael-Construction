{% form_theme form 'ui/form/theme.html.twig' %}

<section class="row advert-advertiser">
    <div class="col-12">
        <div class="card card-cascade mb-4">
            <div class="view view-cascade gradient-card-header bg-primary z-depth-0 px-3">
                <h5 class="mb-0 font-weight-normal">
                    Reserver ce bien
                </h5>
            </div>
            <div class="card-body card-body-cascade px-3 pb-3 pt-0">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'admin-form'}}) }}
                <P class="text-danger my-0">{{ form_errors(form) }}</P>

                {{ include('site/advert/messageForm.html.twig') }}

                {{ form_widget(form._token) }}

                <div class="d-flex justify-content-center mt-3">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-md z-depth-0">Reserver maintenant</button>
                    </div>
                </div>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
        </div>
    </div>
</section>



