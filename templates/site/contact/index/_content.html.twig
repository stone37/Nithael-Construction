{% form_theme form 'ui/form/theme.html.twig' %}

<section class="container">
    <div class="row">
        <div class="col-12">
            <section class="contact-section mb-5">
                <div class="card">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="card-body form">
                                <h3 class="text-dark font-weight-bold"><i class="fas fa-envelope pr-2"></i>N'hésitez pas à nous contacter</h3>

                                {{ include('ui/_flashes_message.html.twig') }}

                                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'admin-form'}}) }}
                                <P class="text-danger my-0">{{ form_errors(form) }}</P>

                                {{ include('site/contact/form.html.twig') }}

                                {{ form_widget(form._token) }}

                                <div class="d-flex justify-content-center mt-3">
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary z-depth-0">Envoyer <i class="fas fa-paper-plane ml-1"></i></button>
                                    </div>
                                </div>
                                {{ form_end(form, {'render_rest': false}) }}
                            </div>
                        </div>
                        <div class="col-12 col-lg-4">
                            <div class="card-body contact text-center h-100 white-text bg-primary">
                                <h3 class="h3-responsive font-weight-bold mt-2 mb-4 pb-2">Information de contact</h3>
                                <ul class="text-lg-left list-unstyled ml-2">
                                    {% if settings.city %}
                                        <li>
                                            <p>
                                                <i class="fas fa-map-marker-alt pr-2 text-secondary"></i>
                                                {{ settings.city }} {% if settings.country %}({{ settings.country }}){% endif %}
                                            </p>
                                        </li>
                                    {% endif %}

                                    {% if settings.address %}
                                        <li>
                                            <p>
                                                <i class="fas fa-address-book pr-2 text-secondary"></i>
                                                {{ settings.address }}
                                            </p>
                                        </li>
                                    {% endif %}

                                    {% if settings.phone %}
                                        <li>
                                            <p><i class="fas fa-phone-alt pr-2 text-secondary"></i>{{ settings.phone }}</p>
                                        </li>
                                    {% endif %}

                                    {% if settings.fax %}
                                        <li>
                                            <p><i class="fas fa-fax pr-2 text-secondary"></i> {{ settings.fax }}</p>
                                        </li>
                                    {% endif %}

                                    {% if settings.email %}
                                        <li>
                                            <p><i class="fas fa-envelope pr-2 text-secondary"></i> {{ settings.email }}</p>
                                        </li>
                                    {% endif %}
                                </ul>
                                <hr class="hr-light my-4">
                                <ul class="list-inline text-center list-unstyled">
                                    {% if settings.facebookAddress %}
                                        <li class="list-inline-item">
                                            <a href="{{ settings.facebookAddress }}" class="p-2 fa-lg fb-ic" target="_blank">
                                                <i class="fab fa-facebook-f text-secondary"></i>
                                            </a>
                                        </li>
                                    {% endif %}

                                    {% if settings.twitterAddress %}
                                        <li class="list-inline-item">
                                            <a href="{{ settings.twitterAddress }}" class="p-2 fa-lg tw-ic" target="_blank">
                                                <i class="fab fa-twitter text-secondary"></i>
                                            </a>
                                        </li>
                                    {% endif %}

                                    {% if settings.linkedinAddress %}
                                        <li class="list-inline-item">
                                            <a href="{{ settings.linkedinAddress }}" class="p-2 fa-lg li-ic" target="_blank">
                                                <i class="fab fa-linkedin-in text-secondary"></i>
                                            </a>
                                        </li>
                                    {% endif %}

                                    {% if settings.instagramAddress %}
                                        <li class="list-inline-item">
                                            <a href="{{ settings.instagramAddress }}" class="p-2 fa-lg ins-ic" target="_blank">
                                                <i class="fab fa-instagram text-secondary"></i>
                                            </a>
                                        </li>
                                    {% endif %}

                                    {% if settings.youtubeAddress %}
                                        <li class="list-inline-item">
                                            <a href="{{ settings.youtubeAddress }}" class="p-2 fa-lg yt-ic" target="_blank">
                                                <i class="fab fa-youtube text-secondary"></i>
                                            </a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>


