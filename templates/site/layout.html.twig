{% extends 'base.html.twig' %}

{% block app_navbar %}
    <nav class="navbar navbar-expand navbar-light py-2 py-lg-3 fixed-top">
        <div class="container">
            {{ include('site/layout/_logo.html.twig', {'config': config}) }}

            <div class="collapse navbar-collapse show">
                <ul class="navbar-nav ml-auto align-items-center">
                    {{ include('site/layout/_nav_social_btn.html.twig', {'config': config}) }}

                    {{ include('site/layout/_devis_btn.html.twig') }}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block app_intro %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary second py-2 {#py-3#}">
        <div class="container">
            <div class="d-flex">
                <button class="navbar-toggler p-0" type="button" data-toggle="collapse" data-target="#navbarToggle" aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
                    <div class="button-icon"><i class="fas fa-bars"></i></div>
                </button>
                <div class="navbar-mobile-social-icon">
                    {{ include('site/layout/_nav_mobile_social_btn.html.twig', {'config': config}) }}
                </div>
            </div>

            <div class="collapse navbar-collapse" id="navbarToggle">
                <ul class="navbar-nav mr-auto">
                    {{ include('site/layout/_nav_item.html.twig', {'config': config}) }}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

